{
	"$schema": "http://json-schema.org/schema#",
	"$id": "http://iiif.io/api/presentation/ns/schema-manifest.json",
	"title": "Manifest Validation Schema - Strict",
	"type": "object",
	"properties": {
		"@context": {"$ref": "#/definitions/contextArrayOrPrezi"},
		"id": {"type": "string", "format": "uri"},
		"type": {"type": "string", "enum": ["Manifest"]},
		"label": {"$ref": "#/definitions/languageMap"},
		"metadata": {"type": "array", "items": {"$ref": "#/definitions/metadataItem"}},
		"summary": {"$ref": "#/definitions/languageMap"},
		"requiredStatement": {"$ref": "#/definitions/metadataItem"},
		"thumbnail": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
		"accompanyingCanvas": {"$ref": "#/definitions/canvas"},
		"placeholderCanvas": {"$ref": "#/definitions/canvas"},
		"viewingDirection": {"$ref": "#/definitions/viewingDirectionItems"},
		"behavior": {"type": "array", "items": {"$ref": "#/definitions/manifestBehaviorItems"}},
		"navDate": {"type": "string", "format": "date-time"},
		"rights": {"type": "string", "format": "uri"},
		"provider": {"type": "array", "items": {"$ref": "#/definitions/agent"}},
		"homepage": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
		"service": {"type": "array", "items": {"$ref": "#/definitions/service"}},
		"rendering": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
		"partOf": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
		"seeAlso": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
		"start": {"anyOf": [
				{"$ref": "#/definitions/canvasRef"}, 
				{"$ref": "#/definitions/specificResource"}
			]
		},
		"items": {"type": "array", "items": {"$ref": "#/definitions/canvas"}},
		"structures": {"type": "array", "items": {"$ref": "#/definitions/range"}},
		"annotations": {"type": "array", "items": {"$ref": "#/definitions/annotationPage"}}
	},

	"definitions": {
		"contextArrayOrPrezi": {
			"anyOf": [
				{"type": "array", "items": {"type": "string", "format": "uri"}},
				{"type": "string", "enum": "http://iiif.io/api/presentation/3/context.json"}
			]
		},
		"languageMap": {
			"type": "object",
			"patternProperties": {
				"^([a-z]{2,3}(-[a-zA-Z]+)?|none)$": { 
					"type": "array", "items": {"type": "string"}}
			},
			"additionalProperties": false
		},
		"metadataItem": {
			"type": "object",
			"properties": {
				"label": {"$ref": "#/definitions/languageMap"},
				"value": {"$ref": "#/definitions/languageMap"}
			},
			"additionalProperties": false,
			"required": ["label", "value"]
		},
		"externalResource": {
			"type": "object",
			"properties": {
				"id": {"type": "string", "format": "uri"},
				"type": {"type": "string"},
				"label": {"$ref": "#/definitions/languageMap"},				
				"format": {"type": "string"},
				"service": {"type": "array", "items": {"$ref": "#/definitions/service"}},
				"language": {"type": "array", "items": {"type": "string"}},
				"height": {"type": "integer", "minimum": 1},
				"width": {"type": "integer", "minimum": 1},
				"duration": {"type": "number", "minimum": 1}
			},
			"additionalProperties": false,
			"required": ["id", "type"],
			"dependencies": {
				"width": ["height"],
				"height": ["width"]
			}
		},
		"service": {
			"type": "object",
			"anyOf": [
				{
					"properties": {
						"id": {"type": "string", "format": "uri"},
						"type": {"$ref": "#/definitions/serviceTypeItems"},						
						"profile": {"type": "string"}
					},
					"required": ["id", "type"]
				},
				{
					"properties": {
						"@id": {"type": "string", "format": "uri"},
						"@type": {"type": "string"}
					}
				}
			]
		},
		"viewingDirectionItems": {
			"type": "string", 
			"enum": ["right-to-left", "left-to-right", 
					"top-to-bottom", "bottom-to-top"]
		},
		"manifestBehaviorItems": {
			"type": "string",
			"enum": ["auto-advance", "continuous", 
					"individuals", "no-auto-advance", "no-repeat",
					"paged", "repeat", "unordered"]
		},
		"contentTypeItems": {
			"type": "string",
			"enum": ["Dataset", "Image", "Model", "Sound", "Text", "Video"]
		},
		"serviceTypeItems": {
			"type": "string",
			"enum": ["ImageService1", "ImageService2", "ImageService3",
					"SearchService1", "AutoCompleteService1", 
					"AuthCookieService1", "AuthTokenService1", "AuthLogoutService1"]
		},
		"agent": {
			"type": "object",
			"properties": {
				"id": {"type": "string", "format": "uri"},
				"type": {"type": "string", "enum": ["Agent"]},
				"label": {"$ref": "#/definitions/languageMap"},				
				"homepage": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"logo": {"$ref": "#/definitions/externalResource"},
				"seeAlso": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}} 
			},
			"additionalProperties": false,
			"required": ["id", "type", "label"]
		},
		"canvasRef": {
			"type": "object",
			"properties": {
				"id": {"type": "string", "format": "uri"},
				"type": {"type": "string", "enum": ["Canvas"]}	
			},
			"required": ["id", "type"]
		},
		"specificResource": {
			"type": "object",
			"properties": {
				"id": {"type": "string", "format": "uri"},
				"type": {"type": "string", "enum": ["SpecificResource"]},
				"source": {"type": "string", "format": "uri"},
				"selector": {"type": "object"},
				"purpose": {"type": "array", "items": {"type": "string"}},
				"styleClass": {"type": "string"}
			},
			"required": ["type", "source", "selector"]
		},



		"annotationPage": {
			"type": "object",
			"properties": {
				"id": {"type": "string", "format": "uri"},
				"type": {"type": "string", "enum": ["AnnotationPage"]},	
				"label": {"type": "string"},
				"items": {"type": "array", "items": {"$ref": "#/definitions/annotation"}},

				"metadata": {"type": "array", "items": {"$ref": "#/definitions/metadataItem"}},
				"summary": {"$ref": "#/definitions/languageMap"},
				"requiredStatement": {"$ref": "#/definitions/metadataItem"},
				"thumbnail": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"behavior": {"type": "array", "items": {"$ref": "#/definitions/behaviorItems"}},
				"rights": {"type": "string", "format": "uri"},
				"homepage": {"$ref": "#/definitions/externalResource"},
				"service": {"type": "array", "items": {"$ref": "#/definitions/service"}},
				"rendering": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"partOf": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"provider": {"type": "array", "items": {"$ref": "#/definitions/agent"}},
				"seeAlso": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}}
			},
			"required": ["id", "type"]

		},

		"range": {
			"type": "object",
			"properties": {
				"id": {"type": "string", "format": "uri"},
				"type": {"type": "string", "enum": ["Range"]},
				"label": {"$ref": "#/definitions/languageMap"},

				"metadata": {"type": "array", "items": {"$ref": "#/definitions/metadataItem"}},
				"summary": {"$ref": "#/definitions/languageMap"},
				"requiredStatement": {"$ref": "#/definitions/metadataItem"},
				"thumbnail": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"accompanyingCanvas": {"$ref": "#/definitions/canvas"},
				"placeholderCanvas": {"$ref": "#/definitions/canvas"},
				"viewingDirection": {"$ref": "#/definitions/viewingDirection"},
				"behavior": {"type": "array", "items": {"$ref": "#/definitions/behaviorItems"}},
				"navDate": {"type": "string", "format": "date-time"},
				"rights": {"type": "string", "format": "uri"},
				"provider": {"type": "array", "items": {"$ref": "#/definitions/agent"}},
				"homepage": {"$ref": "#/definitions/externalResource"},
				"service": {"type": "array", "items": {"$ref": "#/definitions/service"}},
				"rendering": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"partOf": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"seeAlso": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"start": {"anyOf": [
						{"$ref": "#/definitions/canvasRef"}, 
						{"$ref": "#/definitions/specificResource"}
					]
				},
				"items": {"type": "array", "items": {"$ref": "#/definitions/rangeItems"}}
			},
			"required": ["id", "type", "items"]
		},

		"canvas": {
			"type": "object",
			"properties": {
				"id": {"type": "string", "format": "uri"},
				"type": {"type": "string", "enum": ["Canvas"]},
				"label": {"$ref": "#/definitions/languageMap"},
				"height": {"type": "integer", "minimum": 1},
				"width": {"type": "integer", "minimum": 1},
				"duration": {"type": "number", "minimum": 1},
				"items": {"type": "array", "items": {"$ref": "#/definitions/annotationPage"}},

				"metadata": {"type": "array", "items": {"$ref": "#/definitions/metadataItem"}},
				"summary": {"$ref": "#/definitions/languageMap"},
				"requiredStatement": {"$ref": "#/definitions/metadataItem"},
				"thumbnail": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"posterCanvas": {"$ref": "#/definitions/canvas"},
				"behavior": {"type": "array", "items": {"$ref": "#/definitions/behaviorItems"}},
				"navDate": {"type": "string", "format": "date-time"},
				"rights": {"type": "string", "format": "uri"},
				"provider": {"type": "array", "items": {"$ref": "#/definitions/agent"}},				
				"homepage": {"$ref": "#/definitions/externalResource"},
				"service": {"type": "array", "items": {"$ref": "#/definitions/service"}},
				"rendering": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"partOf": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"seeAlso": {"type": "array", "items": {"$ref": "#/definitions/externalResource"}},
				"annotations": {"type": "array", "items": {"$ref": "#/definitions/annotationPage"}}
			},
			"required": ["id", "type"],
			"dependencies": {
				"width": ["height"],
				"height": ["width"]
			},
			"anyOf": [
					{"required": ["height", "width"]},
					{"required": ["duration"]}
			] 
		},

		"rangeItems": {
			"anyOf": [
				{"$ref": "#/definitions/canvasRef"},
				{"$ref": "#/definitions/range"},
				{"$ref": "#/definitions/specificResource"}
			]
		},

		"annotation": {
			"type": "object",
			"properties": {
				"id": {},
				"type": {}
			}
		}

	},
	"additionalProperties": false,
	"required": ["@context", "id", "type", "items", "label"]
}
